                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/response.PodResponse"
                        }
                    }
                }
            }
        },
        "/pod/getPod": {
            "post": {
                "produces": [
