        "/pod/getAllPod": {
            "get": {
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "GetAllPod"
                ],
                "summary": "获取所有 Pod 信息",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/response.PodResponse"
                        }
                    }
                }
            }
        },
        "/pod/getNamespacePod/{namespace}": {
            "get": {
                "produces": [
